# Auth Service Environment Configuration
# Copy this file to .env and update the values

# Server Configuration
NODE_ENV=development
AUTH_SERVICE_PORT=3001
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/xform_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-should-be-at-least-32-characters-long
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-should-be-different-from-jwt-secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Google OAuth Configuration (Optional)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Frontend URLs
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# Email Configuration (Optional - for email verification)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis Configuration (Optional - for advanced rate limiting)
REDIS_URL=redis://localhost:6379

# Security Configuration
ACCOUNT_LOCKOUT_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=3600000
PASSWORD_RESET_EXPIRES=3600000
EMAIL_VERIFICATION_EXPIRES=86400000

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
SENSITIVE_RATE_LIMIT_MAX=3

# Session Configuration
SESSION_SECRET=your-session-secret-key-for-passport-sessions
SESSION_TIMEOUT=3600000

# Audit Logging
ENABLE_AUDIT_LOGGING=true
LOG_LEVEL=info

# Development Only - Set to false in production
ENABLE_CORS_ALL=false
ENABLE_DEBUG_LOGS=true
