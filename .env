# Environment variables for local development
# Copy this file to .env and update the values

# Database Configuration
POSTGRES_DB=xform_db
POSTGRES_USER=xform_user
POSTGRES_PASSWORD=xform_password
DATABASE_URL=postgresql://xform_user:xform_password@localhost:5432/xform_db

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration (IMPORTANT: Change in production!)
JWT_SECRET=super-secret-jwt-key-for-development-only-change-in-production-very-long-key

# Google OAuth Configuration (Optional for local development)
GOOGLE_CLIENT_ID=your-google-client-id-optional-for-local-dev
GOOGLE_CLIENT_SECRET=your-google-client-secret-optional-for-local-dev

# Firebase Configuration (Optional for local development)
FIREBASE_PROJECT_ID=xform-dev-project
FIREBASE_PRIVATE_KEY=dev-firebase-private-key-optional-for-local
FIREBASE_CLIENT_EMAIL=dev@xform-dev-project.iam.gserviceaccount.com

# BigQuery Configuration (Optional for local development)
BIGQUERY_PROJECT_ID=xform-analytics-dev
BIGQUERY_DATASET=xform_analytics_dev

# AWS Configuration (Optional for File Service)
AWS_ACCESS_KEY_ID=your-aws-access-key-optional-for-local
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-optional-for-local
AWS_REGION=us-east-1
S3_BUCKET_NAME=xform-file-uploads-dev

# Service Ports
AUTH_SERVICE_PORT=3001
FORM_SERVICE_PORT=8001
REALTIME_SERVICE_PORT=8002
RESPONSE_SERVICE_PORT=3002
ANALYTICS_SERVICE_PORT=5001
FILE_SERVICE_PORT=3003

# API Gateway
API_GATEWAY_PORT=8080

# Development/Production
NODE_ENV=development
