# X-Form API Gateway Configuration Example
# Copy this file to .env or set these environment variables

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=8080
SERVER_ENVIRONMENT=development
SERVER_VERSION=2.0.0

# Security Configuration - JWT
SECURITY_JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SECURITY_JWT_ISSUER=x-form-api-gateway
SECURITY_JWT_EXPIRY=24h

# Security Configuration - JWKS (Optional - for RSA validation)
# SECURITY_JWKS_ENDPOINT=https://your-auth-server.com/.well-known/jwks.json
# SECURITY_JWKS_CACHE_TIMEOUT=1h
# SECURITY_JWKS_RATE_LIMIT=5

# Security Configuration - mTLS (Optional)
# SECURITY_MTLS_ENABLED=false
# SECURITY_MTLS_CA_FILE=/path/to/ca.crt
# SECURITY_MTLS_CERT_FILE=/path/to/client.crt
# SECURITY_MTLS_KEY_FILE=/path/to/client.key

# TLS Configuration (Optional)
# SERVER_TLS_ENABLED=false
# SERVER_TLS_CERT_FILE=/path/to/server.crt
# SERVER_TLS_KEY_FILE=/path/to/server.key

# Traefik Integration (Optional)
TRAEFIK_ENABLED=true
TRAEFIK_API_URL=http://localhost:8081
TRAEFIK_API_USERNAME=admin
TRAEFIK_API_PASSWORD=admin
TRAEFIK_PROVIDER_NAME=x-form-gateway

# Tyk Integration (Optional)
TYK_ENABLED=true
TYK_GATEWAY_URL=http://localhost:8080
TYK_DASHBOARD_URL=http://localhost:3000
TYK_API_KEY=your-tyk-api-key
TYK_ORGANIZATION_ID=your-org-id

# Service Discovery - Microservice URLs
SERVICES_AUTH_SERVICE_URL=http://localhost:3001
SERVICES_AUTH_SERVICE_HEALTH_PATH=/health
SERVICES_AUTH_SERVICE_TIMEOUT=30s

SERVICES_FORM_SERVICE_URL=http://localhost:3002
SERVICES_FORM_SERVICE_HEALTH_PATH=/health
SERVICES_FORM_SERVICE_TIMEOUT=30s

SERVICES_RESPONSE_SERVICE_URL=http://localhost:3003
SERVICES_RESPONSE_SERVICE_HEALTH_PATH=/health
SERVICES_RESPONSE_SERVICE_TIMEOUT=30s

SERVICES_ANALYTICS_SERVICE_URL=http://localhost:3004
SERVICES_ANALYTICS_SERVICE_HEALTH_PATH=/health
SERVICES_ANALYTICS_SERVICE_TIMEOUT=30s

SERVICES_COLLABORATION_SERVICE_URL=http://localhost:3005
SERVICES_COLLABORATION_SERVICE_HEALTH_PATH=/health
SERVICES_COLLABORATION_SERVICE_TIMEOUT=30s

SERVICES_REALTIME_SERVICE_URL=http://localhost:3006
SERVICES_REALTIME_SERVICE_HEALTH_PATH=/health
SERVICES_REALTIME_SERVICE_TIMEOUT=30s

# Observability - Metrics
OBSERVABILITY_METRICS_ENABLED=true
OBSERVABILITY_METRICS_PATH=/metrics
OBSERVABILITY_METRICS_PORT=9090

# Observability - Tracing (Optional)
# OBSERVABILITY_TRACING_ENABLED=false
# OBSERVABILITY_TRACING_ENDPOINT=http://localhost:14268/api/traces
# OBSERVABILITY_TRACING_SERVICE_NAME=x-form-api-gateway

# Observability - Logging
OBSERVABILITY_LOGGING_LEVEL=info
OBSERVABILITY_LOGGING_FORMAT=json

# Events - Message Broker (Optional)
# EVENTS_ENABLED=false
# EVENTS_BROKER_TYPE=redis
# EVENTS_BROKER_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMITING_ENABLED=true
RATE_LIMITING_REQUESTS_PER_MINUTE=60
RATE_LIMITING_BURST=10

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-API-Key,X-Request-ID
