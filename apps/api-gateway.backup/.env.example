# API Gateway Configuration

# Server Configuration
PORT=8080
METRICS_PORT=9090
ENVIRONMENT=development
VERSION=1.0.0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-environment

# Microservice URLs
AUTH_SERVICE_URL=http://localhost:3001
FORM_SERVICE_URL=http://localhost:8001
RESPONSE_SERVICE_URL=http://localhost:3002
ANALYTICS_SERVICE_URL=http://localhost:5001
FILE_SERVICE_URL=http://localhost:3003
REALTIME_SERVICE_URL=http://localhost:8002

# Infrastructure Services
REDIS_URL=redis://localhost:6379

# API Management (Kong)
KONG_ADMIN_URL=http://localhost:8001

# Observability
JAEGER_URL=http://localhost:14268/api/traces

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# CORS Configuration (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://app.xform.dev

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_SECOND=100
RATE_LIMIT_BURST_SIZE=10

# Timeouts (in seconds)
READ_TIMEOUT=30
WRITE_TIMEOUT=30
IDLE_TIMEOUT=120

# TLS Configuration (for production)
TLS_CERT_FILE=
TLS_KEY_FILE=

# Database Connection (if needed)
DATABASE_URL=postgresql://user:password@localhost:5432/gateway_db

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000
