# Real-Time Collaboration Service Configuration

# Server Configuration
SERVER_PORT=8083
SERVER_HOST=0.0.0.0
SERVER_ENVIRONMENT=development
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
SERVER_IDLE_TIMEOUT=120s

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_MIN_IDLE_CONNS=5
REDIS_MAX_RETRIES=3
REDIS_DIAL_TIMEOUT=5s
REDIS_READ_TIMEOUT=3s
REDIS_WRITE_TIMEOUT=3s
REDIS_IDLE_TIMEOUT=300s

# Auth Configuration
AUTH_JWT_SECRET=your-jwt-secret-key-here-change-in-production
AUTH_SERVICE_SECRET=your-service-secret-key-here-change-in-production
AUTH_TOKEN_EXPIRATION=24h
AUTH_ISSUER=x-form-backend
AUTH_AUDIENCE=collaboration-service

# WebSocket Configuration
WEBSOCKET_READ_BUFFER_SIZE=1024
WEBSOCKET_WRITE_BUFFER_SIZE=1024
WEBSOCKET_MAX_MESSAGE_SIZE=8192
WEBSOCKET_PING_PERIOD=54s
WEBSOCKET_PONG_WAIT=60s
WEBSOCKET_WRITE_WAIT=10s
WEBSOCKET_MESSAGE_RATE_LIMIT=100
WEBSOCKET_RATE_LIMIT_WINDOW=60s
WEBSOCKET_MAX_USERS_PER_ROOM=50
WEBSOCKET_CHECK_ORIGIN=false
WEBSOCKET_ENABLE_COMPRESSION=true
WEBSOCKET_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Kafka Configuration (for future implementation)
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_PREFIX=x-form
KAFKA_GROUP_ID=collaboration-service
KAFKA_ENABLE_AUTO_COMMIT=true
KAFKA_AUTO_COMMIT_INTERVAL=1s

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics
METRICS_UPDATE_INTERVAL=30s

# Performance Configuration
MAX_CONNECTIONS=10000
CONNECTION_BUFFER_SIZE=256
CLEANUP_INTERVAL=300s
